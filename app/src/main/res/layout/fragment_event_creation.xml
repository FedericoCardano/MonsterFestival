<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/eventLayout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomeEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome Evento"
                android:textColor="@color/brawnColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editNomeEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome Evento"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvCausaEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Causa Evento"
                android:textAlignment="center"
                android:textColor="@color/brawnColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editCausaEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="CausaEvento"
                android:inputType="text" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="-90"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/tvReazioneEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reazione Evento"
                android:textAlignment="center"
                android:textColor="@color/brawnColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editReazioneEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ReazioneEvento"
                android:inputType="text" />

            <Button
                android:id="@+id/btnSalva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/brawnColor"
                android:text="@string/salva" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>